#!/bin/bash

echo
echo "########################################################"
echo "####               Init Docker Database             ####"
echo "########################################################"
echo

source docker/vars

source docker/banner

echo
echo "Start Machine..."
docker-machine start $machine_name

echo
echo "Attach Machine to Terminal..."
eval $(docker-machine env --shell bash $machine_name)

echo
echo "Init Database..."
docker exec -it ${application_name}_database_1 psql -U "postgres" -d "${appliation_name}" -f "init.sql"
